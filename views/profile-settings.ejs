<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta
      name="description"
      content="Purpose is a unique and beautiful collection of UI elements that are all flexible and modular. A complete and customizable solution to building the website of your dreams."
    />
    <meta name="author" content="Webpixels" />
    <title>AlgoQuest - Profile Settings</title>
    <!-- Favicon -->
    <link rel="icon" href="../cstm-assets/logo.svg" type="image/png" />
    <!-- Font Awesome 5 -->
    <link
      rel="stylesheet"
      href="../libs/@fortawesome/fontawesome-free/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="/libs/@fortawesome/fontawesome-free/css/all.min.css"
    />
    <!-- Page CSS -->
    <link rel="stylesheet" href="/libs/flatpickr/dist/flatpickr.min.css" />
    <link rel="stylesheet" href="/libs/select2/dist/css/select2.min.css" />
    <!-- Page CSS -->
    <link
      type="text/css"
      href="../libs/@fancyapps/fancybox/dist/jquery.fancybox.min.css"
      rel="stylesheet"
    />
    <!-- Purpose CSS -->
    <link rel="stylesheet" href="../css/purpose.css" id="stylesheet" />
  </head>

  <body>
    <header class="header header-transparent" id="header-main">
      <!-- Main navbar -->
      <%- include('partials/navbar'); %>
    </header>

    <div class="main-content">
      <!-- Header (account) -->
      <%- include('partials/header'); %>
      <section class="pt-5 pt-lg-0">
        <div class="container">
          <div class="row">
            <div class="col-lg-4">
              <!-- Profile Card -->
              <%- include('partials/profile'); %>
            </div>
            <div class="col-lg-8 mt-lg-5">
              <!-- Change avatar -->
              <div class="card bg-gradient-warning hover-shadow-lg">
                <div class="card-body py-3">
                  <div class="row row-grid align-items-center">
                    <div class="col-lg-8">
                      <div class="media align-items-center">
                        <a
                          href="account-profile-public.html#"
                          class="avatar avatar-lg rounded-circle mr-3"
                        >
                          <img
                            alt="Image placeholder"
                            src="../img/theme/light/team-1-800x800.jpg"
                          />
                        </a>
                        <div class="media-body">
                          <div>
                            <form id="change-avatar">
                              <input
                                type="file"
                                id="avatar"
                                class="custom-input-file"
                                multiple
                              />
                              <label for="avatar">
                                <i class="fa fa-upload"></i>
                                <span>Choose a fileâ€¦</span>
                              </label>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div
                      class="col-auto flex-fill mt-4 mt-sm-0 text-sm-right d-none d-lg-block"
                      id="avatar-btn-container"
                    >
                      <button
                        type="submit"
                        type="button"
                        form="change-avatar"
                        class="btn btn-primary rounded-pill"
                      >
                        <span class="btn-inner--icon"
                          ><i class="fas fa-fire"></i
                        ></span>
                        <span class="btn-inner--text">Change</span>
                      </button>
                    </div>
                  </div>
                </div>
              </div>

              <!-- General information form -->
              <div class="actions-toolbar py-2 mb-4">
                <h5 class="mb-1">General information</h5>
              </div>
              <form id="profile-form">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-control-label">User name</label>
                      <input
                        class="form-control"
                        type="text"
                        name="username"
                        id="username"
                        value="<%= user.username %>"
                      />
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-control-label">First name</label>
                      <input
                        class="form-control"
                        type="text"
                        name="firstName"
                        id="firstName"
                        value="<%= user.firstName %>"
                        placeholder="Enter your first name"
                      />
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-control-label">Last name</label>
                      <input
                        class="form-control"
                        type="text"
                        name="lastName"
                        id="lastName"
                        value="<%= user.lastName %>"
                        placeholder="Also your last name"
                      />
                    </div>
                  </div>
                </div>
                <div class="row align-items-center">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-control-label">Phone</label>
                      <input
                        class="form-control"
                        type="text"
                        name="phone"
                        id="phone"
                        placeholder="+40-777 245 549"
                        value="<%= user.phone %>"
                      />
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-control-label">Gender</label>
                      <select
                        class="form-control"
                        data-toggle="select"
                        id="gender"
                        name="gender"
                      >
                        <option
                          value="<%= user.gender %>"
                          selected
                          disabled
                          hidden
                        >
                          <%= user.gender %>
                        </option>
                        <option value="Female">Female</option>
                        <option value="Male">Male</option>
                        <option value="Rather not say">Rather not say</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-control-label">Email</label>
                      <input
                        class="form-control"
                        type="email"
                        name="email"
                        id="email"
                        value="<%= user.email %>"
                        readonly
                      />
                    </div>
                  </div>
                </div>

                <!-- Skills -->
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-control-label mb-3">Skills</label>
                      <input
                        type="text"
                        name="skills"
                        id="skills"
                        class="form-control"
                        value="<%= skillsVal %>"
                        data-toggle="tags"
                        placeholder="Type here..."
                      />
                    </div>
                  </div>
                </div>

                <!-- Description -->
                <div class="pt-5 mt-5 delimiter-top">
                  <div class="actions-toolbar py-2 mb-4">
                    <h5 class="mb-1">About me</h5>
                    <p class="text-sm text-muted mb-0">
                      Use this field to let others know you better.
                    </p>
                  </div>
                  <div class="row">
                    <div class="col">
                      <div class="form-group">
                        <div class="form-group">
                          <label class="form-control-label">Bio</label>
                          <textarea
                            class="form-control"
                            name="about"
                            id="about"
                            placeholder="Tell us a few words about yourself"
                            value
                            rows="5"
                          >
<%- user.about %></textarea
                          >
                          <small class="form-text text-muted mt-2"
                            >You can @mention other users and organizations to
                            link to them.</small
                          >
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Save changes buttons -->
                <div class="pt-5 mt-5 delimiter-top text-center">
                  <input
                    type="submit"
                    class="btn btn-sm btn-primary"
                    value="Save changes"
                  />
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
    </div>
    <!-- Footer-->
    <%- include('partials/footer'); %>
    <!-- Core JS - includes jquery, bootstrap, popper, in-view and sticky-kit -->
    <script src="../js/purpose.core.js"></script>
    <!-- Page JS -->
    <script src="../libs/@fancyapps/fancybox/dist/jquery.fancybox.min.js"></script>
    <script src="../libs/autosize/dist/autosize.min.js"></script>
    <script src="/libs/flatpickr/dist/flatpickr.min.js"></script>
    <script src="/libs/select2/dist/js/select2.min.js"></script>
    <script src="/libs/bootstrap-tagsinput/dist/bootstrap-tagsinput.min.js"></script>
    <!-- Purpose JS -->
    <script src="../js/purpose.js"></script>
    <!-- Demo JS - remove it when starting your project -->
    <script src="../js/demo.js"></script>
  </body>
</html>

<script>
  const profileForm = document.querySelector("#profile-form");
  const changeAvatar = document.querySelector("#change-avatar");
  const avatarBtnContainer = document.querySelector("#avatar-btn-container");
  const avatar = document.querySelector("#avatar");

  changeAvatar.addEventListener("submit", async (e) => {
    e.preventDefault();
    avatarBtnContainer.innerHTML = `<div class="spinner-border text-primary" role="status">
                        <span class="sr-only">Loading...</span>
                      </div>`;
    const formData = new FormData();
    formData.append("avatar", avatar.files[0]);
    console.log(formData);
    try {
      const res = await fetch("/update/avatar", {
        method: "POST",
        body: formData,
      });

      const data = await res.json();
      if (data.status == "OK") window.location.reload(true);
    } catch (error) {
      console.log(error);
      alert("Oops! something went wrong.");
    }
    // const avatar = changeAvatar.value;
    // console.log(avatar);
  });

  profileForm.addEventListener("submit", async (e) => {
    e.preventDefault();

    try {
      const firstName = profileForm.firstName.value;
      const lastName = profileForm.lastName.value;
      const gender = profileForm.gender.value;
      const phone = profileForm.phone.value;
      const about = profileForm.about.value;
      const username = profileForm.username.value;
      const skills = profileForm.skills.value.split(",");
      console.log(skills);

      const res = await fetch("/update/profile", {
        method: "PATCH",
        body: JSON.stringify({
          firstName,
          lastName,
          gender,
          phone,
          about,
          skills,
          username,
        }),
        headers: { "Content-Type": "application/json" },
      });

      if (res.status == 200) {
        window.location.reload(true);
      } else {
        alert("Oops something went wrong!");
      }
    } catch (error) {
      alert("Oops something went wrong!");
    }
  });
</script>
