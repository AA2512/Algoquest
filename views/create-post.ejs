<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta
      name="description"
      content="Purpose is a unique and beautiful collection of UI elements that are all flexible and modular. A complete and customizable solution to building the website of your dreams."
    />
    <meta name="author" content="Webpixels" />
    <title>
      Purpose Website UI Kit - Purpose is a unique and beautiful collection of
      UI elements that are all flexible and modular. A complete and customizable
      solution to building the website of your dreams.
    </title>
    

    <link rel="stylesheet" href="/richtexteditor/richtexteditor/rte_theme_default.css"/>
    <script type="text/javascript" src="/richtexteditor/richtexteditor/rte.js"></script>
    <script type="text/javascript" src='/richtexteditor/richtexteditor/plugins/all_plugins.js'></script>

    <!-- Favicon -->
    <link rel="icon" href="/img/brand/favicon.png" type="image/png">
    <!-- Font Awesome 5 -->
    <link rel="stylesheet" href="/libs/@fortawesome/fontawesome-free/css/all.min.css"><!-- Page CSS -->
    <link rel="stylesheet" href="/libs/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="/libs/select2/dist/css/select2.min.css">
    <!-- Purpose CSS -->
    <link rel="stylesheet" href="/css/purpose.css" id="stylesheet">

    <link rel="stylesheet" href="/richtexteditor/richtexteditor/rte_theme_default.css"/>
    <script type="text/javascript" src="/richtexteditor/richtexteditor/rte.js"></script>
    <script type="text/javascript" src='/richtexteditor/richtexteditor/plugins/all_plugins.js'></script>

  </head>

  <body>
    <header class="header header-transparent" id="header-main">
      <!-- Main navbar -->
      <%- include('partials/navbar'); %>
    </header>
    
    <div class="main-content">
      <!-- Header (account) -->
      <%- include('partials/header'); %>
      <section class="pt-5 pt-lg-0">
        <div class="container">
          <div class="row">
            <div class="col-lg-4">
              <!-- Profile Card -->
              <%- include('partials/profile'); %>
            </div>
            <div class="col-lg-8 mt-lg-5">
              

              <!-- General information form -->
              <div class="actions-toolbar py-2 mb-4">
                <h5 class="mb-1">General information</h5>
                <p class="text-sm text-muted mb-0">
                  You can help us, by filling your data, create you a much
                  better experience using our website.
                </p>
              </div>
              <form id="profile-form">
                <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="form-control-label">User name</label>
                        <input
                          class="form-control"
                          type="text"
                          name="username"
                          id="username"
                          value="<%= user.username %>"
                          readonly
                          
                        />
                        
                      </div>
                    </div>
                  </div>
                <div class="row">
                  <div class="col">
                    <div class="form-group">
                      <label class="form-control-label">Title</label>
                      <input
                        class="form-control"
                        type="text"
                        name="title"
                        required
                        id="title"
                        placeholder="Enter your post title"
                      />
                    </div>
                  </div>
                  
                </div>
                

                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-control-label mb-3">Tags</label>
                        <input type="text" 
                        name="tags" id="tags"
                        class="form-control" value="" data-toggle="tags" placeholder="Type here..." />
                      </div>
                  </div>
                </div>
                <!-- About Post -->

                <div class="row">
                  <div class="col">
                    <div class="form-group">
                      <label class="form-control-label">About Post</label>
                      <input
                        class="form-control"
                        type="text"
                        name="aboutPost"
                        required
                        id="aboutPost"
                        placeholder="Something about your post..."
                      />
                    </div>
                  </div>
                  
                </div>
                <!-- Description -->
                <div class="mt-5 delimiter-top">
                  <div class="actions-toolbar py-2 mb-4">
                    <h5 class="mb-1">Description</h5>
                    <p class="text-sm text-muted mb-0">
                      Use this field to enter your post content
                    </p>
                  </div>
                  <div class="row">
                    <div class="col">
                      <div class="form-group">
                        <div class="form-group">
                          <label class="form-control-label">Content</label>
                          <div id="div_editor1">
                            
                        </div>
                            
                          
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Save changes buttons -->
                <div class="pt-5 mt-5 delimiter-top text-center">
                  <input type="submit" class="btn btn-sm btn-primary" value="Save changes">
                    
                  </input>
                 
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
    </div>
    <!-- Footer-->
    <%- include('partials/footer'); %>
    <!-- Scripts -->
    <!-- Core JS - includes jquery, bootstrap, popper, in-view and sticky-kit -->
    <script src="/js/purpose.core.js"></script>
    <!-- Page JS -->
    <script src="/libs/flatpickr/dist/flatpickr.min.js"></script>
    <script src="/libs/select2/dist/js/select2.min.js"></script>
    <script src="/libs/bootstrap-tagsinput/dist/bootstrap-tagsinput.min.js"></script>
    <!-- Purpose JS -->
    <script src="/js/purpose.js"></script>
    <!-- Demo JS - remove it when starting your project -->
    <script src="/js/demo.js"></script>
  </body>
</html>

<script>
  
	var editor1 = new RichTextEditor("#div_editor1");
  
  const form = document.querySelector("form");
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    const title = form.title.value;
    const description = form.aboutPost.value;
    const tags = form.tags.value.split(',');
    const innerHTML = editor1.getHTMLCode();

    try {
      const res = await fetch('/post/create/new', {
        method: 'POST',
        body: JSON.stringify({
          title,
          description,
          cover: "/img/backgrounds/img-5.jpg",
          tags,
          innerHTML

        }),
        headers: { "Content-Type": "application/json" },
      })
      if(res.status == 200)
      {
        alert("Post created successfully!");
      }
      else
      {
        alert("Oops something went wrong!");
      }
    } catch (error) {
      alert("Oops something went wrong!");
    }
    
  })


  
</script>
